            </div>

        </div>

        <nav>
            <ul class="links">
                <li><a href="/products/almacen">Almacen</a></li>
                <li><a href="/instituciones">Instituciones</a></li>
                <li><a href="/nosotros">Nosotros</a></li>
                <li class="subLogin">
                    <a href="#">Cuenta</a>
                    <ul class="children">
                        <li><a href="/users/crear">Crear Cuenta</a></li>
                        <li><a href="/users/ingresar">Login</a></li>
                    </ul>
                
                </li>
            </ul>
        </nav>
        <label for="nav-toggle" class="icon-burger">
            <div class="line"></div>
            <div class="line"></div>
            <div class="line"></div>
        </label>
    </section>
    <script src = "/js/header.js"></script>
