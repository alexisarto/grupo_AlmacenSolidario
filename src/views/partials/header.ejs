<header>
    <section class="isologotipo">
        <div class="logo">
            <a href="/home"><img src="/img/Logo.png" alt=""></a>
        </div>
        <div class="brand">
            <h3>Almacen Solidario</h3>
            <h4>Comenzá a ayudar</h4>
        </div>
    </section>

    <section class="navegacion">
        <div class="encabezado">
            
            <div class="usuario">
                <a href=""><i class="fas fa-user"></i></a>
                <a href="" id="nombre"><% if (typeof usuarioLogueado != 'undefined') { %> <%= usuarioLogueado.nombre %> <% } else { %> Nombre <% } %></a>
                <% if (typeof usuarioLogueado != 'undefined') { %>
                <ul class="perfil">
                    <li><a href="/users/detalle-perfil/<%= usuarioLogueado.id %>">Mi perfil</a></li>
                    <li><a href="/users/logout">Cerrar sesión</a></li>
                </ul>
